<script type="text/javascript">
	// onsubmit event
	function validate() {

		return true;

	}

	var overSection = function() {
		document.write("Over the section");
	}

	var outSection = function() {
		document.write("Out of section");
	}
	
</script>

<script type="text/javascript">
